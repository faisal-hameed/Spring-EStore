pipeline {

    agent { label 'vasona' }

    options {
        timestamps()
        buildDiscarder(logRotator(numToKeepStr: '20'))
        disableConcurrentBuilds()
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Tests and Code Coverage') {
            steps {
                echo 'Build, Tests and Code Coverage...'
                devfactory (portfolio: 'DevFactory', product: 'ZStore-Spring', types: 'Java', runIf: gitCommit == 'master') {
                    sh "mvn clean install"
                }
                
                devfactory (portfolio: 'DevFactory', product: 'ZStore-Spring', types: 'Java', runIf: gitCommit == 'master') {
                    sh "mvn test"
                }

                echo 'Publish coverage report...'
                step([
                        $class        : 'JacocoPublisher',
                        buildOverBuild: false,
                ])
            }
        }
    }

    post {
        always {
            junit '**/surefire-reports/*.xml'
        }
        cleanup {
            cleanWs()
        }
    }

}
